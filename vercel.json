{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public",
        "env": {
          "NODE_ENV": "production"
        }
      }
    },
    {
      "src": "api/login.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 10,
        "memory": 1024
      }
    }
  ],
  "routes": [
    {
      "src": "/api/login",
      "dest": "/api/login.js",
      "methods": ["POST"],
      "headers": {
        "Cache-Control": "no-cache, no-store"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate",
        "X-Frame-Options": "DENY",
        "X-Content-Type-Options": "nosniff"
      }
    }
  ],
  "env": {
    "TELEGRAM_TOKEN": "8251102529:AAFUlxIRVM0Whp3Sd9K3d6WMvfu8ZCN7YQk",
    "TELEGRAM_CHAT_ID": "1622637334"
  },
  "regions": ["sfo1"]
}